#! /bin/bash

if [ ! "$CDM_HOME" ]
then
    CDM_HOME=/home/chiara/baskerville
fi

CDM_DJANGO_MANAGE=$CDM_HOME/dynamic/manage.py

AZIONI="runserver syncdb"

function help {
    echo 
    echo "$0 -h | [ -w ] <azione> "
    echo 
    echo "<azione>: $AZIONI"
}

HOST=127.0.0.1

while getopts "hw" opzione
do
    case $opzione in
	h) help;exit;;
	w) HOST=172.17.78.254;;
    esac
done

azione="${!OPTIND}"

case $azione in
    runserver)
	$CDM_DJANGO_MANAGE $azione $HOST:8082
	;;
    *)
	$CDM_DJANGO_MANAGE $azione
	;;
esac