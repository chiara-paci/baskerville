{% extends "base.html" %}

{% block content %}

{% include "includes/pagination.html" %}

<form>
<table>
{% for child in child_list %}
<tr><td>{{ child }}</td><td>
    <input size="300" type="text" class="categorizer" id="father{{ child.id }}" value="{{ child.fathers }}"/></td>
  <td><a href="" class="button categorizer" data-child_id="{{ child.id }}" data-fathers_input="father{{ child.id }}">save</a></td>
</tr>
{% endfor %}
</table>
</form>


{% include "includes/pagination.html" %}

{% endblock content %}

{% block script %}

$("a.categorizer").click(function(event){
    event.preventDefault();
    var child_id=$(this).data("child_id");
    var url="/bibliography/json/category/"+child_id+"/change_fathers/";
    var fathers_input_id=$(this).data("fathers_input");
    var fathers=$("#"+fathers_input_id).val();

    var data={
	"categories": fathers
    }

    $.post(url,data)	
        .done( function(obj) {
	    console.log("ok");
	    console.log(obj);
	    $("#"+fathers_input_id).val(obj.fathers);
	    $("#"+fathers_input_id).css({ "background": "white" });
	})
	.fail( function(data) {
	    console.log("fail");
	    console.log(data);
	    console.log(data.responseText);
	    alert(data.responseText);
	});

});


$("input").change(function(event){
    console.log($(this));
    $(this).css({ "background": "red" });
});



{% endblock script %}
