class MenuRow(object):
    def __init__(self,txt,xurl):
        self.txt=txt
        self.url=xurl

class HomeRow(object):
    def __init__(self,txt,xurl,img):
        self.txt=txt
        self.url=xurl
        self.img=settings.STATIC_URL+"bigicons/"+img

class HomeTitle(object):
    def __init__(self,txt,img):
        self.txt=txt
        self.img=settings.STATIC_URL+"bigicons/"+img

